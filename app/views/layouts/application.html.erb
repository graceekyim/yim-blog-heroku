<!DOCTYPE html>
<html>
<head>
  <title>Yim | blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav class="nav-bar">
			<h1 class="yim-blog"><a href="/">the <span class="big-yim">Yim</span> blog</a></h1>
			<ul class="nav-links">
				<% if logged_in? %>
				<li><a href="/users/<%=current_user.id %>/edit">Profile</a></li>
				<!-- link to-->
				<li><a href="/users/logout">Logout</a></li>
				<li><a href="/posts/new">Create Post</a></li>
				<% else %>
				<div class="log-in">
					<%= form_for(:user, :url => {:controller => 'users', :action => 'login'}) do |f| %>
					<li><%= f.email_field :email, :autofocus => true, placeholder: 'Email' %></li>
					<li><%= f.password_field :password, :autofocus => true, placeholder: 'Password' %></li>
					<li><%= f.submit 'Sign In' %></li>
					<% end %>
				</div>
				<li><a href="/users/new" class="signup"><button>Sign Up</button></a></li>
			<% end %>
			</ul>
		</nav>
	</header>

<%= yield %>

</body>
</html>
